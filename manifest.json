{
  "manifest_version": 3,
  "name": "Auto Login Scheduler",
  "version": "1.0",
  "description": "Automatically opens and logs into specified websites every 45 minutes",
  "icons": {
    "16": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "alarms",
    "tabs",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["tesseract.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}